<Window x:Class="MangaConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manga Converter" Height="350" Width="525">
    <Grid Background="#FF3C3C3C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="348*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="23" Margin="0,85,0,0" TextWrapping="Wrap" Text="File Path Here" VerticalAlignment="Top" Width="197" Grid.Column="1" Background="#FF3C3C3C" BorderBrush="White" Foreground="White"/>
        <Button x:Name="Convert_to_CBZ" Content="Convert to CBZ" HorizontalAlignment="Left" Margin="0,177,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click" Grid.Column="1"/>
        <Label Content="&#x9;Place file path below that contains the manga chapters.&#xA;Format should be Vol.XX Ch.XX. This will result in a CBZ for each volume. " HorizontalAlignment="Left" Margin="85,25,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Background="#FF3C3C3C" Foreground="White"/>

    </Grid>
</Window>
